<!-- Content Heading -->
<% if (title) { %>
    <h1> <%= title %> </h1>
    <% } else {
      res.redirect('/')
    } %>

<!-- flash messages if any will be displaced as a result of the following line of code -->
<%- messages() %>

<!-- Code block to handle errors -->
<% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
  <% } %>

 <!-- Welcome message -->
 <h2>Welcome <%- locals.accountData.account_firstname  %></h2>

 <!-- Message Links to Inbox -->
  <h2>Message Center</h2>
  <ul>
    <li>You have - unread messages</li>
    <li>Go to <a href="/account/inbox/<%- locals.accountData.account_id %>"> inbox</a></li>
  </ul>
  


 <p><a href="/account/updateView/<%- locals.accountData.account_id %>"> Update account information </a></p>

 <% if (locals.accountData.account_type === 'Employee' || locals.accountData.account_type === 'Admin') { %>
  <h1> Inventory Management </h1> 
  <p><a href="/inv"> Management View </a></p>
  <% } %>
