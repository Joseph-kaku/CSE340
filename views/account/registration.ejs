<!-- Content Heading -->
<% if (title) { %>
    <h1> <%= title %> </h1>
    <% } else {
      res.redirect('/')
    } %>

<!-- flash messages if any will be displaced as a result of the following line of code -->
<%- messages() %>

<!-- The form build -->
<form action="/account/register" method="post">
    <fieldset id="fsetr">
        <label for="firstname"> First name </label> <br>      
        <input type="text" class="fname" name="account_firstname" size="15" required> <br>
        <label for="lastname"> Last name</label>  <br>
        <input type="text" class="lname" name="account_lastname" size="15" required> <br> 
        <label for="email">Email: </label> <br>
        <input name="account_email" id="email" type="text" required> <br>
        <label for="password">Password: </label> <br>
        <input name="account_password" id="password" type="password" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{12,}" required><br>
        <!-- <span id="pswBtn"> Show Password </span> <br> -->
        <input type="submit" class="register" value="Register"> <br>
    </fieldset>
</form>