<!-- Content Heading -->
<% if (title) { %>
    <h1> <%= title %> </h1>
    <% } else {
      res.redirect('/')
    } %>

<!-- flash messages if any will be displaced as a result of the following line of code -->
<%- messages() %>

    
<form action="/controllers/accountController.js">
    <fieldset>
        <label for="email">Email: </label><br>
        <input name="account_email" id="email" type="text" required><br>
        <label for="password">Password: </label><br>
        <input name="account_password" id="password" type="password" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{12,}" required><br>
        <input type="submit" class="login" value="Login">
        <p> 
            No account?
            <a href="/account/registration">Sign Up</a>
        </p>
        <p class ="pswdrequirements">
            Password Requirements: 
            Must contain at least one number 
            and one uppercase and lowercase letter, 
            and at least 12 or more characters 
        </p>
    </fieldset>
</form>
        



