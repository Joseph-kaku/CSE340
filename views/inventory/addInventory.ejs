<!-- Content Heading -->
<% if (title) { %>
    <h1> <%= title %> </h1>
    <% } else {
      res.redirect('/')
    } %>

<!-- flash messages if any will be displaced as a result of the following line of code -->
<%- messages() %>

<!-- Code block to handle errors -->
<% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
  <% } %>

  <form action="/inv" method="post">
    <fieldset>
        <label for="Classification">Classification </label><br>
        <label for="make">Make
            <input type="text" placeholder="Min of 3 characters">
        </label>
        <label for="model">Model
          <input type="text" placeholder="Min of 3 characters">
        </label>
        <label for="description">Description
          <textarea name="description" id="describe" cols="30" rows="10"></textarea>
        </label>
        <label for="imagepath">Image Path
          <input type="text">
        </label>
        <label for="imagethumbnail">Thumbnail Path
          <input type="text">
        </label>
        <label for="price">Price
          <input type="text" pattern="^\$\d{1,3}(,\d{3})*(\.\d+)?$">
        </label>
        <label for="year">Year
          <input type="number" min="1999" max="2024" placeholder="4-digit year">
        </label>
        <label for="miles">Miles
          <input type="text" pattern="" placeholder="digits only">
        </label>
        <label for="color">Color
          <input type="text">
        </label>
    </fieldset>
  </form>